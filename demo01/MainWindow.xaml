<Window x:Class="demo01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox Text="{Binding Name,Mode=TwoWay}" Width="200" Height="30" VerticalAlignment="Top" Margin="10" />
        <Button Content="Generate Name" Click="ButtonBase_OnClick" Width="200" Height="30" VerticalAlignment="Top" Margin="10,50,0,0" />
    </Grid>
</Window>